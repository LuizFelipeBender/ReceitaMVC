@model SiteMVC.DTO.EditaUsarioDTO;
@{
    ViewData["Title"] = "Editar Usario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar Usario</h1>

<form method="post">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" class="form-control" disabled />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" disabled />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Nome" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Nome" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Sobrenome" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Sobrenome" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Sobremim" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea asp-for="Sobremim" class="form-control"></textarea>
        </div>
    </div>
    </div>
    <div class="form-group row">
        <label asp-for="FacebookLink" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="FacebookLink" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="TwitterLink" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="TwitterLink" class="form-control" />
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Atualizar</button>
            <a asp-controller="Admin" asp-action="ListaUsuarios" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>