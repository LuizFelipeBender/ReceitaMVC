@page
@model IndexModel
@{
    ViewData["Title"] = "Perfil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.Nome"></label>
                <input asp-for="Input.Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.Sobrenome"></label>
                <input asp-for="Input.Sobrenome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.Sobremim"></label>
                <textarea asp-for="Input.Sobremim" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Input.FacebookLink"></label>
                <input asp-for="Input.FacebookLink" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.TwitterLink"></label>
                <input asp-for="Input.TwitterLink" class="form-control" />
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Salvar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}